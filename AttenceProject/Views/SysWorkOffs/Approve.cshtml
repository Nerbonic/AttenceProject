        <form id="wu-form" method="post" name="form1" action="~/SysWorkOffs/SaveAdd">
            <table>
                <tr style="display:none;">
                    <td width="70" align="right">ID:</td>
                    <td><input type="text" name="ID" id="ID" class="wu-text" /></td>
                </tr>
                <tr>
                    <td width="70" align="right">调休人ID:</td>
                    <td><input type="text" name="ProposerID" disabled="disabled" class="wu-text" /></td>
                </tr>
                <tr>
                    <td width="70" align="right">调休人姓名:</td>
                    <td><input type="text" name="UserName" disabled="disabled" class="wu-text" /></td>
                </tr>
                <tr>
                    <td width="70" align="right">调休原因:</td>
                    <td><input type="text" name="VacationReason"  disabled="disabled" class="wu-text" /></td>
                </tr>
                <tr>
                    <td width="70" align="right">调休类型:</td>
                    <td><input type="text" name="WorkOffType"  disabled="disabled" class="wu-text" /></td>
                </tr>
                <tr>
                    <td width="70" align="right">紧急联系人:</td>
                    <td>
                        <input type="text" name="Emergency"  disabled="disabled" class="wu-text" />
                    </td>
                </tr>
                <tr>
                    <td width="70" align="right">加班开始时间:</td>
                    <td>
                        <input class="easyui-datetimebox" value="" disabled="disabled"  name="OverTimeStart" id="OverTimeStart" style="width:200px">
                    </td>
                </tr>
                <tr>
                    <td width="70" align="right">加班结束时间:</td>
                    <td>
                        <input class="easyui-datetimebox" value=""  disabled="disabled" name="OverTimeEnd" id="OverTimeEnd" style="width:200px">
                    </td>
                </tr>
                <tr>
                    <td width="70" align="right">调休开始时间:</td>
                    <td>
                        <input class="easyui-datetimebox" value="" disabled="disabled"  name="VacationStart" id="VacationStart" style="width:200px">
                    </td>
                </tr>
                <tr>
                    <td width="70" align="right">调休结束时间:</td>
                    <td>
                        <input class="easyui-datetimebox" value="" disabled="disabled"  name="VacationEnd" id="VacationEnd" style="width:200px">
                    </td>
                </tr>
                <tr style="display:none">
                    <td width="70" align="right">审批人流:</td>
                    <td>
                        <input type="text" value="" name="SendFor" id="SendFor" style="display:none" />
                    </td>
                </tr>
                <tr style="display:none" id="tr_reason">
                    <td width="70" align="right">抄送人流:</td>
                    <td>
                        <input type="text" name="CopyFor" id="CopyFor" style="display:none" />
                    </td>
                </tr>
                <tr>
                    <td align="right" width="70">审批意见:</td>
                    <td><textarea class="wu-textarea" id="Applyrate" name="Applyrate"></textarea></td>
                </tr>
                <tr>
                    <td align="right" width="70">审批结果:</td>
                    <td>
                        <input type="radio" name="ApplyStatus"  value="1"/>通过
                        <input type="radio" name="ApplyStatus"  value="0"/>驳回
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <!-- End of easyui-dialog -->
</body>
</html>



