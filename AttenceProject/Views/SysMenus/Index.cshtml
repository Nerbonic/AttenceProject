}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MenuText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MenuParentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
